message: {
    id: String,
    time: Date/Time,
    text: String,
    from: String: Username,
    to: String: Username,
    read: Boolean,
    notify: Boolean
}

post: {
    id: String,    
    time: Date/Time,
    text: String,
    author: String: Username,    
}

comment: {
    id: String,
    pid: String : PostID,
    text: String,
    time: Date/Time,
    author: String: Username,
}

friends: {
    id: String,
    sid: String,
    did: String,
    status: String [Blocked | Friend | Added]
}
notification: {
    id: String,
    type: String, [Liked | Comment | Added]
    originator: UserId,
    target: UserId,
    notifed: Boolean,
    viewed: Booleane
}

user: {    
    username: String,
    first_name: String,
    last_name: String, 
    dob: Date,
    intro: String,
    gender: String
}



